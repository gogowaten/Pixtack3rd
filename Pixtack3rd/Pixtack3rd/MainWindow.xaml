          <StackPanel.Resources>
            <Style TargetType="Button">
              <Setter Property="Margin" Value="4,0,4,0"/>
            </Style>
          </StackPanel.Resources>

          <StackPanel x:Name="MyStackPanel">
            <ComboBox x:Name="ComboBoxSaveFileType" SelectedItem="{Binding ImageType}"/>

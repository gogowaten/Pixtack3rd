              </UniformGrid>
            </GroupBox>
            <GroupBox Header="奥行き(Z軸)移動、対象はActiveThumb">
              <UniformGrid Rows="1">
                <Button x:Name="ButtonMostUp" Content="最前面" Click="ButtonZMostUp_Click"/>
                <Button x:Name="ButtonMostDown" Content="最背面" Click="ButtonZMostDown_Click"/>
